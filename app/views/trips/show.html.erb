<h1>Trips#show</h1>

<div>
  <% if @trip.photos.attached? %>
    <% @trip.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 200, crop: :fill %>
    <% end %>
  <% end %>

<h1><%= @trip.name %></h1>
<%= @trip.destination %>
<%= @trip.activity_type %>

<h5>Book now</h5>
<div class="booking_form">
    <%= simple_form_for([@trip, @booking]) do |f| %>
      <%= f.input :total_guests, as: :integer %>
      <%= f.submit "Book now", class: "btn btn-success" %>
    <% end %>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-marker-value="<%= @marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
