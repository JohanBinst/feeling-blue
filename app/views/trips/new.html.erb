<div class="form_container">
  <h1>Add a new trip</h1>
  <div class="row">
    <div class="col-8">
      <%= render 'form', trip: @trip %>
    </div>
    <div class="col-4">
      <div style="width: 100%; height: 600px;"
      data-controller="departure-point"
      data-departure-point-departure-points-value="<%= Trip::DEPARTURE.to_json %>"
      data-departure-point-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>

</div>
